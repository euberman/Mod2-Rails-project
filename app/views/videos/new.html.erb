<%= form_for @video do |f| %>
    <%= f.hidden_field :student_id, :value => session[:student_id] %>
    <label class="label"> Date </label> 
    <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %> <br> <br>
    <label class="label"> Title </label> 
      <div class="control">
        <input class="input" type="text"  name="video[name]"> <br> <br>
    </div>   
   <label class="label"> Youtube URL </label> 
      <div class="control">
        <input class="input" type="text"  name="video[url]"> <br> <br>
    </div>   
  <label class="label"> Description</label> 
      <div class="control">
        <input class="input" type="text"  name="video[description]"> <br> <br>
    </div>   
    <input class="button is-small" type="submit" value="Upload"><% end %>