    
<div class="columns">   
    <div class="column" ></div>
    <div class="column is-three-fifths" >
      <h2 class="title is-2" >Welcome to Flatiron Blog Net</h2>

      <%= form_tag ({controller: 'sessions', action: 'process_login', method: 'post'}) do %>

        <div class="field">
          <div class="control">
            <%= label_tag :email, "Email", class: 'label' %>
            <%= text_field_tag :email, nil, class: 'input', autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= label_tag :password, "Password", class: 'label' %>
            <%= password_field_tag :password, nil, class: 'input' %>
          </div>
        </div>

        <div class="buttons is-grouped is-align-content-center">
          <%= submit_tag("Login", class: 'button is-primary') %>
          <%= link_to "Create an Account", new_student_path, class: 'button is-primary is-outlined' %>
        </div>
      
      <% end %>

    </div>
    <div class="column" ></div>
</div>