
<section class="hero is-primary is-12 is-bold">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @student.name %>
      </h1>
      <h2 class="subtitle">
        <%= @student.cohort_location %> Cohort
      </h2>
    </div>
  </div>
</section>

<section class="is-12 has-background-light">
   <div class="level mb-2 p-5">
      <div class="level-item has-text-centered">
         <div>
            <p class="heading">Blogs</p>
            <p class="title"><%= @student.blog_count %></p>
         </div>
      </div>
      <div class="level-item has-text-centered">
         <div>
            <p class="heading">Videos</p>
            <p class="title"><%= @student.videos_count %></p>
         </div>
      </div>
      <div class="level-item has-text-centered">
         <div>
            <p class="heading">Likes</p>
            <p class="title">12</p>
         </div>
      </div>
   </div>
  <div class='container mb-5'>
    <div class="tile is-ancestor">
      <div class="tile is-6 is-parent is-vertical">
          <div class="tile is-child">
            <h3 class="title"> My Blog posts: </h3>
          </div>
          <% @student.blogs.each do |blog|%>
            <div class="tile is-child has-background-warning">
              <%= link_to blog.name, blog_path(blog) %>
            </div>
          <% end %>
      </div>
      <div class="tile is-6 is-parent is-vertical">
          <div class="tile is-child">
            <h3 class="title"> My Videos: </h3>
          </div>
          <% @student.videos.each do |video|%>
            <div class="tile is-child has-background-warning">
                  - <%= link_to video.name, video_path(video) %> <br>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</section>
