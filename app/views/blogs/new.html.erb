<h1> Submit a new blog post</h1>
<%= form_for @blog do |f| %>
    <%= f.label "Date" %>
    <%= f.date_field :date, :value => Time.now.strftime('%Y-%m-%d') %> <br> <br>
    <%= f.label "Title" %>
    <%= f.text_field :name %> <br> <br>
    <%= f.text_area :content %> <br> <br>
    <%= f.submit "Publish" %>
<% end %>