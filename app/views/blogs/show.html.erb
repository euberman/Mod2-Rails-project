<h1> <%= @blog.name %> </h1>

By <%= link_to @blog.student.name, student_path(@blog.student) %> <br> 


<%= @blog.date %> <br>
👏 <% @blog.likes.each do |like| %> 
<%= like.number %>
<% end %> 

<% if @blog.student.id == session[:student_id] %>
    <%= form_tag edit_blog_path(@blog), method: :get do %>
    <%= submit_tag "Edit" %>
    <% end %> 

    <%= form_tag blog_path(@blog),method: :delete do %>
    <%= submit_tag "Delete" %>
    <% end %> 

<% end %><br> <br> <br>

<%= @blog.content%>